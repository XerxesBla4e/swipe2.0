<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:attr/colorBackground">

    <TextView
        android:id="@+id/referral_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refer &amp; Earn"
        android:textSize="24sp"
        android:textColor="?android:attr/textColorPrimary"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/referral_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_referral_code_if_any"
        android:textColor="?android:attr/textColorPrimary"
    android:layout_below="@id/referral_title"
    android:layout_marginTop="20dp"
    android:visibility="gone"/>
    <Button
        android:id="@+id/apply_code_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply Code"
        android:textColor="?android:attr/textColorPrimary"
    android:layout_below="@id/referral_code_input"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:visibility="gone"/>

    <TextView
        android:id="@+id/referral_code_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Referral Code:"
        android:textColor="?android:attr/textColorPrimary"
    android:layout_below="@id/apply_code_button"
    android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/referral_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textSize="18sp"
        android:textColor="?android:attr/textColorPrimary"
    android:layout_below="@id/referral_code_label"
    android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Code"
        android:textColor="?android:attr/textColorPrimary"
    android:layout_below="@id/referral_code"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:visibility="gone"/>

    <Button
        android:id="@+id/join_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Now"
        android:textColor="?android:attr/textColorPrimary"
    android:layout_below="@id/referral_code"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:visibility="gone"/>

    <TextView
        android:id="@+id/earned_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/referral_code"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="100dp"
        android:text="Earnings: 0 UGX"
        android:textAlignment="center"
        android:textColor="?android:attr/textColorPrimary" />

</RelativeLayout>